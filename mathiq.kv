#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import randint random.randint

MathRoot:
	id: math_root
	adding_screen: adding_screen
	substracting_screen: substracting_screen
	multiplying_screen: multiplying_screen
	final_screen: final_screen
	score_screen: score_screen
	transition: NoTransition()
	StartScreen:
		id:  start_screen
		name: "start"
		manager: math_root
	MenuScreen:
		id: menu_screen
		name: "menu"
		manager: math_root
	AddingScreen:
		id:  adding_screen
		name: "adding"
		manager: math_root
	SubstractingScreen:
		id: substracting_screen
		name: "substracting"
		manager: math_root
	MultiplyingScreen:
		id: multiplying_screen
		name: "multiplying"
		manager: math_root
	IncorrectScreen:
		id:  incorrect_screen
		name: "incorrect"
		manager: math_root
	ScoreScreen:
		id: score_screen
		name: "score"
		manager: math_root
	FinalScreen:
		id: final_screen
		name: "final"
		manager: math_root


<MathRoot>:
	canvas.before:
		Color:
			rgba: 63/255.0, 163/255.0, 188/255.0,1
		Rectangle:
			pos: root.pos
			size: root.size

<StartScreen>:
	button: b
	FloatLayout:
		Label:
			size_hint_y: 0.45
			text: "Math IQ"
			font_size: "45sp"
			pos_hint: {"center_y": 0.75}
			font_name: "fonts/Bitter_Regular.ttf"
			#font_kerning: False
		StartButton:
			id: b
			text: "Start"
			size: "90dp", "60dp"
			pos_hint: {'center_x': 0.5, 'center_y':0.5}
			line_height: 1.8
			border: [0,0,0,0]
			on_release: app.root.current = 'menu'
		StartButton:
			text: "Scores"
			size: "90dp", "50dp"
			pos_hint: {"center_x": 0.5, "center_y": 0.30}
			on_press: print self.background_color
			on_release: app.root.current = root.manager.to_high_scores()

<StartButton@Button>:
	canvas.before:
		Color:
			rgba: 1,1, 1, 1
		Rectangle:
			pos: [self.x - 2, self.y - 2]
			size: [self.width + 4, self.height + 4]
	background_normal: ""
	background_down: ""
	background_color: [102.0/255, 101.0/255, 101.0/255, 1] if self.state == "down" else [125/255.0, 125/255.0, 125/255.0, 1]
	font_size: "20sp"
	font_name: "fonts/3ds_Light.ttf"
	size_hint: [None, None]

<MenuScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			canvas.before:
				Color:
					rgba: 1,1, 1, 1
				Rectangle:
					pos: [self.x - 2, self.y - 2]
					size: [self.width + 4, self.height + 4]
				Color:
					rgba: [125/255.0, 125/255.0, 125/255.0, 1]
				Rectangle:
					size: self.size
					pos: self.pos
			text: "Test your IQ!"
			font_size: "30sp"
			size_hint_y: 0.20
		FloatLayout:
			MenuOptionButton:
				text: "+"
				pos_hint: {"center_x": 0.5,"center_y": 0.75}
				on_release: app.root.current = "adding"
			MenuOptionButton:
				text: "-"
				pos_hint: {"center_x": 0.5,"center_y": 0.50}
				on_release: app.root.current = "substracting"
			MenuOptionButton:
				text: "x"
				pos_hint: {"center_x": 0.5,"center_y": 0.25}
				on_release: app.root.current = "multiplying"

<MenuOptionButton@Button>:
	canvas.before:
		Color:
			rgba: 1,1, 1, 1
		Rectangle:
			pos: [self.x - 2, self.y - 2]
			size: [self.width + 4, self.height + 4]
	background_normal: ''
	background_down: ''
	background_color: [102.0/255, 101.0/255, 101.0/255, 1] if self.state == "down" else [125/255.0, 125/255.0, 125/255.0, 1]
	size: ["200dp", "50dp"]
	size_hint: [None, None]
	pos_hint: {"center_x": 0.5}
	font_name: "fonts/3ds_Light.ttf"
	font_size: "30sp"

<AddingScreen>:
	answer: ans
	label1: l1
	label2: l2
	s: s
	bottom: bottom
	BoxLayout:
		orientation: "vertical"
		TopBar:
			ScoreLabel:
				id: s
		FloatLayout:
			canvas.before:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					size: [self.width, self.height - 55]
					pos: [self.x, self.y + 28]
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			width: 205
			size_hint_x: None
			size_hint_y: 0.80
			OperationLabel:
				id: l1
				text: root.first_label()
				pos_hint:{"center_x": 0.5, "center_y": 0.77}
			OperationLabel:
				id: l2
				text: root.second_label()
				pos_hint:{"center_x": 0.5, "center_y": 0.57}
			Label:
				canvas:
					Color:
		            	rgba: 0, 0, 0, 1
		            Line:
		            	width: 2
		            	points: [self.center_x - (self.height/5), self.center_y, self.center_x + (self.height/5), self.center_y]
		        pos_hint:{"center_x": 0.5, "center_y": 0.47}
			AnswerInput:
				id: ans
				pos_hint: {"center_x": 0.5, "center_y": 0.27}
				on_text_validate:
					app.root.current = root.manager.check_answer("adding")
		BottomBar:
			id: bottom

<SubstractingScreen>:
	answer: ans
	label1: l1
	label2: l2
	s: s
	BoxLayout:
		orientation: "vertical"
		TopBar:
			ScoreLabel:
				id: s
		FloatLayout:
			canvas.before:
				Color:
					rgba: 1,1, 1, 1
				Rectangle:
					size: [self.width, self.height - 55]
					pos: [self.x, self.y + 28]
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			width: 205
			size_hint_x: None
			size_hint_y: 0.80
			OperationLabel:
				id: l1
				text: root.first_label()
				pos_hint:{"center_x": 0.5, "center_y": 0.77}
			OperationLabel:
				id: l2
				text: root.second_label()
				pos_hint:{"center_x": 0.5, "center_y": 0.57}
			Label:
				canvas:
					Color:
		            	rgba: 0, 0, 0, 1
		            Line:
		            	width: 2
		            	points: [self.center_x - (self.height/5), self.center_y, self.center_x + (self.height/5), self.center_y]
		        pos_hint:{"center_x": 0.5, "center_y": 0.47}
			AnswerInput:
				id: ans
				pos_hint: {"center_x": 0.5, "center_y": 0.27}
				on_text_validate:
					app.root.current = root.manager.check_answer("substracting")
		BottomBar

<MultiplyingScreen>:
	answer: ans
	label1: l1
	label2: l2
	s: s
	BoxLayout:
		orientation: "vertical"
		TopBar:
			ScoreLabel:
				id: s
		FloatLayout:
			canvas.before:
				Color:
					rgba: 1,1, 1, 1
				Rectangle:
					size: [self.width, self.height - 55]
					pos: [self.x, self.y + 28]
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			width: 205
			size_hint_x: None
			size_hint_y: 0.80
			OperationLabel:
				id: l1
				text: root.first_label()
				pos_hint:{"center_x": 0.5, "center_y": 0.77}
			OperationLabel:
				id: l2
				text: root.second_label()
				pos_hint:{"center_x": 0.5, "center_y": 0.57}
			Label:
				canvas:
					Color:
		            	rgba: 0, 0, 0, 1
		            Line:
		            	width: 2
		            	points: [self.center_x - (self.height/5), self.center_y, self.center_x + (self.height/5), self.center_y]
		        pos_hint:{"center_x": 0.5, "center_y": 0.47}
			AnswerInput:
				id: ans
				pos_hint: {"center_x": 0.5, "center_y": 0.27}
				on_text_validate:
					app.root.current = root.manager.check_answer("multiplying")
		BottomBar

<TopBar@FloatLayout>:
	canvas.before:
		Color:
			rgba: 1,1, 1, 1
		Rectangle:
			pos: [self.x - 2, self.y - 2]
			size: [self.width + 4, self.height + 4]
		Color:
			rgba: [125/255.0, 125/255.0, 125/255.0, 1]
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint_y: 0.10
	Label:
		text: "+ - x"
		size: ["60dp", "60dp"]
		size_hint: [None, None]
		font_size: "25sp"
		pos_hint: {"center_y": 0.55, "x": 0.05}

<ScoreLabel@Label>:
	text: ''
	font_size: "25sp"
	size: ["70dp", "60dp"]
	size_hint: [None, None]
	pos_hint: {"center_y": 0.55, "right": 0.95}


<OperationLabel@Label>:
	color: 0,0,0,1
	font_size: "45sp"

<AnswerInput@TextInput>:
	size: "170dp", "75dp"
	size_hint: None, None
	font_size: "45sp"
	multiline: False
	padding_x: 79,0
	input_type: "number"

<BottomBar@FloatLayout>:
	id: top
	size_hint_y: 0.10
	Button:
		canvas.before:
			Color:
				rgba: 1,1, 1, 1
			Rectangle:
				pos: [self.x - 2, self.y - 2]
				size: [self.width + 4, self.height + 4]
		background_normal: ""
		background_down: ""
		background_color: [102.0/255, 101.0/255, 101.0/255, 1] if self.state == "down" else [125/255.0, 125/255.0, 125/255.0, 1]
		text: "Exit"
		size: ["60dp", top.height]
		size_hint: [None, None]
		on_release: app.root.current = "start"

<IncorrectScreen>:
	c: c
	Button:
		id: c
		text: "Wrong!"
		color: 1,1,1,1
		background_normal: ''
		background_color: [125/255.0, 125/255.0, 125/255.0, 1]
		background_down: ''
		font_size: "30sp"
		on_release:
			app.root.transition = SlideTransition(direction = "up")
			app.root.current = "final"

<FinalScreen>:
	FloatLayout:
		Label:
			text: "Final Score"
			size_hint_y: 0.20
			font_size: "30sp"
			pos_hint:{"center_x": 0.5, "center_y": 0.87}
		Label:
			text: str(root.manager.final_score)
			size_hint_y: 0.5
			font_size: "45sp"
			pos_hint:{"center_x": 0.5, "center_y": 0.55}
		FinalScreenButton:
			text: "Exit"
			pos_hint:{"center_x": 0.75, "center_y": 0.15}
			on_release:
				app.root.transition = NoTransition()
				app.root.current = root.manager.to_start()
		FinalScreenButton:
			text: "Enter Name"
			pos_hint:{"center_x": 0.25, "center_y": 0.15}
			on_release: root.manager.enter_player_name()

<FinalScreenButton@Button>:
	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: [self.x - 2, self.y - 2]
			size: [self.width + 4, self.height + 4]
	background_normal: ''
	background_down: ''
	background_color: [102.0/255, 101.0/255, 101.0/255, 1] if self.state == "down" else [125/255.0, 125/255.0, 125/255.0, 1]
	size: "90dp", "55dp"
	size_hint: None, None
	font_name: "fonts/3ds_Light.ttf"

<ScorePopup>:
	n: name
	b: btn
	size_hint: 1, 0.3
	title: "Enter Score"
	BoxLayout:
		orientation: 'vertical'
		TextInput:
			id: name
			multiline: False
			on_text_validate: root.dismiss()
		Button:
			id: btn
			text: "Enter"
			on_release: root.dismiss()

<ErrorPopup>:
	ok_btn: ok_btn
	size_hint: 1,0.4
	title: "ERROR"
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: "You already entered a name."
		Button:
			id: ok_btn
			text: "OK"
			on_release: root.dismiss()


<ScoreScreen>:
	category: category
	inner_box: inner_box
	score_label1_name: score_label1_name
	score_label1_score: score_label1_score
	score_label2_name: score_label2_name
	score_label2_score: score_label2_score
	score_label3_name: score_label3_name
	score_label3_score: score_label3_score
	score_label4_name: score_label4_name
	score_label4_score: score_label4_score
	score_label5_name: score_label5_name
	score_label5_score: score_label5_score
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			canvas.before:
				Color:
					rgba: 1,1, 1, 1
				Rectangle:
					pos: [self.x - 2, self.y - 2]
					size: [self.width + 4, self.height + 4]
			size_hint_y: 0.11
			ScoreOptionButton:
				text:'+'
				on_release: root.write_addition_scores()
			ScoreOptionButton:
				text: "-"
				on_release: root.write_substraction_scores()
			ScoreOptionButton:
				text:"x"
				on_release: root.write_multiplication_labels()
		FloatLayout:
			pos_hint: {"center_y": 0.9}
			ScoresLabel:
				id: category
				text:"High Scores - Addition"
				pos_hint: {"center_y": 0.9}
			GridLayout:
				id: inner_box
				size_hint: 0.6, 0.6
				cols: 2
				#col_force_default: True
				#col_default_width: 75
				#padding: [,0,0,0]
				pos_hint: {"center_x": 0.5, "center_y": 0.525}
				ScoresLabel:
					id: score_label1_name
					text: ""
				ScoresLabel:
					id: score_label1_score
					text: ""
				ScoresLabel:
					id: score_label2_name
					text: ""
				ScoresLabel:
					id: score_label2_score
					text: ""
				ScoresLabel:
					id: score_label3_name
					text: ""
				ScoresLabel:
					id: score_label3_score
					text: ""
				ScoresLabel:
					id: score_label4_name
					text: ""
				ScoresLabel:
					id: score_label4_score
					text: ""
				ScoresLabel:
					id: score_label5_name
					text: ""
				ScoresLabel:
					id: score_label5_score
					text: ""
			ScoreOptionButton:
				text: "Home"
				canvas.before:
					Color:
						rgba: 1,1, 1, 1
					Rectangle:
						pos: [self.x - 2, self.y - 2]
						size: [self.width + 4, self.height + 4]
				background_normal: ''
				background_down: ''
				background_color: [102.0/255, 101.0/255, 101.0/255, 1] if self.state == "down" else [125/255.0, 125/255.0, 125/255.0, 1]
				font_name: "fonts/3ds_Light.ttf"
				width: "75dp"
				height: "45dp"
				size_hint: None, None
				pos_hint:{"center_x": 0.5, "center_y": 0.1}
				on_release: app.root.current = "start"


<ScoreOptionButton@Button>:
	background_normal: ''
	background_down: ''
	background_color: [102.0/255, 101.0/255, 101.0/255, 1] if self.state == "down" else [125/255.0, 125/255.0, 125/255.0, 1]
	font_size: "20sp"

<ScoresLabel@Label>:
	font_size: "17sp"
	pos_hint:{"center_x": 0.5}
	size_hint_y: 1.0/8